{
  "name": "image-match",
  "version": "1.0.0",
  "description": "Match image colors and style from a base image with DNG RAW processing support",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"wait-on dist/main/main.js && electron .\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:renderer": "webpack --config webpack.renderer.js",
    "watch:main": "tsc -p src/main/tsconfig.json --watch",
    "watch:renderer": "webpack --config webpack.renderer.js --watch",
    "lint": "eslint src/**/*.{ts,tsx} --fix",
    "lint:check": "eslint src/**/*.{ts,tsx}",
    "clean": "rimraf dist",
    "package": "npm run build && electron-builder",
    "test": "jest"
  },
  "keywords": [
    "electron",
    "image-processing",
    "dng",
    "raw",
    "color-matching",
    "style-transfer",
    "lightroom",
    "photography"
  ],
  "author": "Theodore Senwein",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "css-loader": "^7.1.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "html-webpack-plugin": "^5.5.3",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "sharp": "^0.32.6"
  },
  "build": {
    "appId": "com.theodoresenwein.imagematch",
    "productName": "Image Match",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.photography"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
