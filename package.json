{
  "name": "film-recipe-wizard",
  "version": "2.9.4",
  "description": "Create and apply photo recipes with AI-powered color grading",
  "main": "dist/main/main.js",
  "scripts": {
    "postinstall": "electron-rebuild",
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"wait-on dist/main/main.js && cross-env NODE_ENV=development electron .\"",
    "dev:test": "concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"npm run test:watch\" \"wait-on dist/main/main.js && cross-env NODE_ENV=development electron .\"",
    "dev:no-test": "concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"wait-on dist/main/main.js && cross-env NODE_ENV=development electron .\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:renderer": "webpack --config webpack.renderer.js",
    "watch:main": "tsc -p src/main/tsconfig.json --watch",
    "watch:renderer": "webpack --config webpack.renderer.js --watch",
    "lint": "eslint 'src/**/*.ts' 'src/**/*.tsx' --fix",
    "lint:check": "eslint 'src/**/*.ts' 'src/**/*.tsx'",
    "typecheck": "tsc -p src/main/tsconfig.json --noEmit && tsc -p src/renderer/tsconfig.json --noEmit",
    "clean": "rimraf dist release",
    "prepare:build": "npm run clean && npm run build && npm run validate-build",
    "package": "npm run prepare:build && electron-builder",
    "package:mac": "npm run prepare:build && electron-builder --mac",
    "package:mac:dmg": "npm run prepare:build && electron-builder --mac dmg",
    "package:mac:universal": "npm run prepare:build && electron-builder --mac --universal",
    "package:win": "npm run prepare:build && electron-builder --win",
    "package:win:nsis": "npm run prepare:build && electron-builder --win nsis",
    "package:win:portable": "npm run prepare:build && electron-builder --win portable",
    "package:linux": "npm run prepare:build && electron-builder --linux",
    "package:linux:appimage": "npm run prepare:build && electron-builder --linux AppImage",
    "package:linux:deb": "npm run prepare:build && electron-builder --linux deb",
    "package:all": "npm run prepare:build && electron-builder --mac --win --linux",
    "generate-icons": "node scripts/generate-icons.js",
    "validate-build": "node scripts/validate-build.js",
    "check-env": "node scripts/check-build-env.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:xmp": "jest --testPathPattern=xmp",
    "knip": "knip"
  },
  "keywords": [
    "electron",
    "photo-recipes",
    "image-processing",
    "color-grading",
    "style-transfer",
    "lightroom",
    "photography",
    "ai-photo-editing"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@eslint/js": "^9.35.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.5.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.2",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.35.0",
    "html-webpack-plugin": "^5.6.4",
    "jest": "^30.1.3",
    "knip": "^5.63.1",
    "rimraf": "^6.0.1",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.5",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "adm-zip": "^0.5.16",
    "openai": "^5.23.1",
    "png-to-ico": "^2.1.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sharp": "^0.34.5",
    "zustand": "^5.0.8"
  },
  "build": {
    "appId": "com.theodoresenwein.filmrecipewizard",
    "productName": "Film Recipe Wizard",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "publish": {
      "provider": "github",
      "owner": "tesenwein",
      "repo": "filmRecipeWizard"
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "generateUpdatesFilesForAllChannels": false,
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "!**/.env*",
      "!**/.*"
    ],
    "icon": "assets/icons/icon",
    "mac": {
      "category": "public.app-category.photography",
      "icon": "assets/icons/icon.png",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "artifactName": "Film-Recipe-Wizard-${version}-${os}-${arch}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": "universal"
        }
      ]
    },
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.ico",
      "artifactName": "Film-Recipe-Wizard-${version}-${os}-${arch}.${ext}",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.png",
      "artifactName": "Film-Recipe-Wizard-${version}-${os}-${arch}.${ext}",
      "category": "Graphics"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "packElevateHelper": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Film Recipe Wizard",
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "installerIcon": "assets/icons/icon.ico",
      "uninstallerIcon": "assets/icons/icon.ico",
      "license": "LICENSE",
      "warningsAsErrors": false
    }
  }
}
