{
  "name": "foto-recipe-wizard",
  "version": "1.0.0",
  "description": "Create and apply photo recipes with AI-powered color grading and DNG RAW processing support",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"wait-on dist/main/main.js && electron .\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:renderer": "webpack --config webpack.renderer.js",
    "watch:main": "tsc -p src/main/tsconfig.json --watch",
    "watch:renderer": "webpack --config webpack.renderer.js --watch",
    "lint": "eslint 'src/**/*.ts' 'src/**/*.tsx' --fix",
    "lint:check": "eslint 'src/**/*.ts' 'src/**/*.tsx'",
    "typecheck": "tsc -p src/main/tsconfig.json --noEmit && tsc -p src/renderer/tsconfig.json --noEmit",
    "clean": "rimraf dist",
    "package": "npm run generate-icons && npm run build && electron-builder",
    "package:mac": "npm run generate-icons && npm run build && electron-builder --mac",
    "package:mac:dmg": "npm run generate-icons && npm run build && electron-builder --mac dmg",
    "package:mac:universal": "npm run generate-icons && npm run build && electron-builder --mac --universal",
    "generate-icons": "node scripts/generate-icons.js",
    "knip": "knip"
  },
  "keywords": [
    "electron",
    "photo-recipes",
    "image-processing",
    "dng",
    "raw",
    "color-grading",
    "style-transfer",
    "lightroom",
    "photography",
    "ai-photo-editing"
  ],
  "author": "Theodore Senwein",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "css-loader": "^7.1.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8.45.0",
    "html-webpack-plugin": "^5.5.3",
    "knip": "^5.63.1",
    "rimraf": "^5.0.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^6.0.0",
    "@mui/material": "^6.0.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "openai": "^5.20.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sharp": "^0.32.6"
  },
  "build": {
    "appId": "com.theodoresenwein.fotorecipewizard",
    "productName": "Foto Recipe Wizard",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "!**/.env*",
      "!**/.*"
    ],
    "icon": "build/icons/icon",
    "mac": {
      "category": "public.app-category.photography",
      "icon": "build/icons/icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons"
    }
  }
}
